{% extends "admin/master_admin.html.twig" %}

{% block title %}Pending Broker Choice{% endblock %}

{% block content %}

	{# Table for list of pending brokers #}
	<h1>List of pending brokers</h1>
	<table border="1">
		<tr>
			<th>User #</th>
			<th>License #</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Company Name</th>
            <th>*Choice*</th>
		</tr>
		{% for l in list %}
			<tr>
				<td>{{l.userId}}</td>
				<td>{{l.licenseNo}}</td>
				<td>{{l.firstName}}</td>
				<td>{{l.lastName}}</td>
				<td>{{l.company}}</td>
				<td>
					<form action="" method="post">
						<button name="accept" onclick="window.location='/admin/pending/accept/{{l.userId}}';">Accept</button>
					</form>
					<form action="" method="post">
						<button name="decline" onclick="window.location='/admin/pending/decline/{{l.userId}}';">Decline</button>
					</form>
				</td>
			</tr>
		{% endfor %}
	</table>
	<br>

{% endblock content %}
