{% extends "admin/master_admin.html.twig" %}

{% block title %}Delete Confirmation{% endblock %}

{% block content %}
<h2>Are you sure that you want to delete this user?</h2>
<br>
<p>ID: {{user.id}}</p>
<p>Email: {{user.email}}</p>
<p>User Type: {{user.role}}</p>

<form method="post">
    <input type="submit" value="Confirm Deletion">
</form>
<button onclick="window.location='/admin/users/list';">Stop Deletion</button>
{% endblock %}
