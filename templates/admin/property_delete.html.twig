{% extends "admin/master_admin.html.twig" %}

{% block title %}Delete Confirmation{% endblock %}

{% block content %}


<h2>Are you sure that you want to delete this property?</h2>
<br>
<p>ID: {{property.id}}</p>
<p>Broker Full Name: {{property.firstName}} {{property.lastName}}</p>
<p>Broker License: {{property.licenseNo}}</p>
<p>Price: {{property.price}}</p>
<p>Title: {{property.title}}</p>
<p>Street Address: {{property.streetAddress}}</p>
<p>Postal Code: {{property.postalCode}}</p>

<form method="post">
    <input type="submit" value="Confirm Deletion">
</form>
<button onclick="window.location='/admin/property/list';">Stop Deletion</button>
{% endblock %}
