{% extends "admin/master_admin.html.twig" %}

{% block title %}User List{% endblock %}

{% block content %}

    {# Table for list of properties #}
    <h1>List of properties</h1>
    <p><a href="/admin/property/add">Add a new property</a></p>
         <table border="1">
        <tr>
            <th>#</th>
            <th>Broker #</th>
            <th>Price</th>
            <th>Title</th>
            <th>Bedrooms</th>
            <th>Bathrooms</th>
            <th>Building Year</th>
            <th>Lot Area</th>
            <th>Appartment #</th>
            <th>Street #</th>
            <th>Street Name</th>
            <th>City</th>
            <th>Province</th>
            <th>Postal Code</th>
            <th>*Modify*</th>
        </tr>
        {% for p in propertyList %}
        <tr>
            <td>{{p.id}}</td>
            <td>{{p.brokerId}}</td>
            <td>{{p.price}}</td>
            <td>{{p.title}}</td>
            <td>{{p.bedrooms}}</td>
            <td>{{p.bathrooms}}</td>
            <td>{{p.buildingYear}}</td>
            <td>{{p.lotArea}}</td>
            <td>{{p.appartmentNo}}</td>
            <td>{{p.streetNo}}</td>
            <td>{{p.streetName}}</td>
            <td>{{p.city}}</td>
            <td>{{p.province}}</td>
            <td>{{p.postalCode}}</td>
            <td>
                <button onclick="window.location='/admin/property/edit/{{p.id}}';">Edit</button>
                <button onclick="window.location='/admin/property/delete/{{p.id}}';">Delete</button>
            </td>
        </tr>               
        {% endfor %}
    </table>
    <br>

{% endblock content %}