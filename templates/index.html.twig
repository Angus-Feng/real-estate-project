{% extends "master.html.twig" %}

{% block content %}
  
<!--/ Carousel Start /-->
<div class="intro intro-carousel">
  <div id="carousel" class="owl-carousel owl-theme">
    {% for featProp in featPropList %}
      
    <div class="carousel-item-a intro-item bg-image" style="background-image: url(uploads/{{featProp.id}}/orig-{{featProp.photoFilePath}})">
      <div class="overlay overlay-a"></div>
      <div class="intro-content display-table">
        <div class="table-cell">
          <div class="container">
            <div class="row">
              <div class="col-lg-8">
                <div class="intro-body">
                  <p class="intro-title-top capitalize">{{featProp.city}}, {{featProp.province}}
                    <br> <span class="uppercase">{{featProp.postalCode}}</span>
                  </p>
                  <h1 class="intro-title mb-4">
                    {# <span class="color-b">  #}
                    {% if featProp.appartmentNo %}
                      {{featProp.appartmentNo}}
                    {% endif %}
                    {{featProp.streetAddress}}
                    {# </span> <br>  #}
                    {# {{featProp.streetAddress}} #}
                  </h1>
                  <p class="intro-subtitle intro-price">
                    <a href="#"><span class="price-a capitalize">house | {{featProp.price}}</span></a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
<!--/ Carousel end /-->

<!--/ Services Start /-->
