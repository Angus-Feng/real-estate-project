{% extends "master.html.twig" %}
{% block addHead %}
<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>

<script>
    let map;

    function initMap() {
    map = new google.maps.Map(document.getElementById("map"), {
        center: { lat: -34.397, lng: 150.644 },
        zoom: 8,
    });
    }
</script>
{% endblock %}
{% block header %}
    Map
{% endblock %}

{% block content %}
    <div id="map" styles="height: 1000px; width: 1000px;"></div>
{% endblock %}
{% block bodyScript %}
    <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCflFmMrn2tJfZDEn8eIokkKldXJlTU19Q&callback=initMap"
    async defer></script>
{% endblock %}